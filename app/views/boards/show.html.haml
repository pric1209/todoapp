.container
  %h2= @board.title
  - @tasks.each do |task| 
    = link_to board_task_path(board_id: @board.id, id: task.id) do
      .card
        - if task.eyecatch.attached?
          -# .card_image
          = image_tag task.eyecatch
        .card_title
          = task.title
        = task.description
        .board_detail
        = image_tag 'Oval.png'
        %p= I18n.l(task.deadline, format: :default)
  .create_content
    = link_to new_board_task_path(@board) do
      .new_board
        + Add new board
        