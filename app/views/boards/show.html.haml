.container
  %h2= @board.title
  - @tasks.each do |task| 
    = link_to task_path(task) do
      .card
        .card_detail
          .card_title
            = task.title
          - if user_signed_in? && current_user.tasks.exists?(id: task.id)
            .dropdown
              = image_tag 'CombinedShape.png'
              .dropdown-content.mini
                = link_to 'Edit', edit_task_path(task.id)
                = link_to 'Delete', task_path(task.id), data:{ method: 'delete',confirm:'本当に削除してもよろしいですか？'}
        = task.description
        .board_detail
        = image_tag 'Oval.png'
        %p= I18n.l(task.deadline, format: :default)
  .create_board
    = link_to '+ Add new board', new_task_path, class: "new_board" 