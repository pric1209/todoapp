.container
  %h2 Edit Board
  = form_with(model: @board, url: board_path(@board), method: 'put' ,local: true) do |f|
    %div
      = f.label :title, 'Name'
    %div
      = f.text_field :title, class: 'text'   
    %div
      = f.label :description, 'Descripton'
    %div
      = f.text_area :description
    = f.submit '保存', class: 'btn-primary'